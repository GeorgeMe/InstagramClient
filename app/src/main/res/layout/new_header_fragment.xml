<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_contracted"
                android:background="@color/main_colour"
                android:elevation="10dp"
                android:translationZ="5dp">

    <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/top_margin_header"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/bottom_margin_header"
            android:layout_alignParentBottom="true"/>

    <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/vertical_mid_margin_header"
            android:layout_alignBottom="@+id/user_image_header"
            android:layout_below="@id/top_margin_header"
            android:layout_toRightOf="@+id/user_image_header"/>

    <!-- footer texts -->


    <ImageView android:layout_width="35dp"
               android:layout_height="@dimen/header_contracted"
               android:id="@+id/back_button"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentBottom="false"
               android:src="@drawable/ic_action_previous_item"
               android:visibility="visible"
               android:scaleType="center"/>


    <view android:layout_width="40dp"
          android:layout_height="40dp"
          class="com.theostanton.InstagramClient.views.UserImageView"
          android:id="@+id/user_image_header"
          android:elevation="12dp"
          android:translationZ="8dp"
          android:scaleType="fitCenter"

          android:layout_toRightOf="@+id/back_button"
          android:layout_alignParentTop="false"
          android:layout_alignParentBottom="false"
          android:src="@drawable/user_place_holder"
          android:layout_margin="5dp"
          android:layout_below="@+id/top_margin_header"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_contracted"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Single Title Text"
            android:id="@+id/single_text_header"

            android:layout_below="@+id/top_margin_header"
            android:layout_toRightOf="@+id/vertical_mid_margin_header"
            android:gravity="center_vertical"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Main Text"
            android:id="@+id/title_text_header"
            android:layout_alignParentTop="false"
            android:layout_toRightOf="@+id/vertical_mid_margin_header"
            android:layout_below="@+id/top_margin_header"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sub Text"
            android:id="@+id/sub_text_header"
            android:layout_below="@+id/title_text_header"
            android:layout_toRightOf="@+id/vertical_mid_margin_header"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_contracted"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Detail Text"
            android:id="@+id/detail_text_header" android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false" android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true" android:gravity="center_vertical|right" android:layout_margin="5dp"
            android:layout_below="@+id/top_margin_header"/>


    <!--bio + website -->

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/bio_text_header"
            android:layout_below="@+id/sub_text_header"
            android:layout_alignLeft="@+id/sub_text_header"
            android:alpha="0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/website_text_header"
            android:layout_below="@+id/bio_text_header"
            android:layout_alignLeft="@+id/sub_text_header"
            android:alpha="0" />


    <com.theostanton.InstagramClient.views.FooterPointer
               android:layout_width="0dp"
               android:layout_height="@dimen/footer_height"
               android:id="@+id/footer_pointer"
               android:layout_above="@id/bottom_margin_header"
               android:layout_alignParentLeft="true"
               android:alpha="0"/>



    <!--number footers-->


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number_footers"
            android:layout_above="@+id/text_footers">

        <TextView
                style="@style/HeaderFooterNumberViews"
                android:id="@+id/header_posts_number"/>
        <TextView
                style="@style/HeaderFooterNumberViews"
                android:id="@+id/header_likes_number"/>
        <TextView
                style="@style/HeaderFooterNumberViews"
                android:id="@+id/header_follows_number"/>
        <TextView
                style="@style/HeaderFooterNumberViews"
                android:id="@+id/header_followedby_number"/>

    </LinearLayout>

        <!--text footers -->

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_footers"
            android:layout_above="@id/bottom_margin_header">

            <TextView
                    style="@style/HeaderFooterTextViews"
                    android:text="Posts"
                    android:id="@+id/header_posts_text"/>
            <TextView
                    style="@style/HeaderFooterTextViews"
                    android:text="Likes"
                    android:id="@+id/header_likes_text"/>
            <TextView
                    style="@style/HeaderFooterTextViews"
                    android:text="Follows"
                    android:id="@+id/header_follows_text"/>
            <TextView
                    style="@style/HeaderFooterTextViews"
                    android:text="Followers"
                    android:id="@+id/header_followedby_text"/>
    </LinearLayout>

    <!-- footer numbers -->





</RelativeLayout>
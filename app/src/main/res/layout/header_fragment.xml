<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_contracted"
    android:background="@color/second_colour"
    android:elevation="@dimen/header_elevation">

    <Space
        android:id="@+id/top_margin_header"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Space
        android:id="@+id/bottom_margin_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true" />

    <Space
        android:id="@+id/vertical_mid_margin_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/user_image_header"
        android:layout_below="@id/top_margin_header"
        android:layout_toRightOf="@+id/user_image_header" />

    <Space
        android:id="@+id/right_margin_header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/user_image_header"
        android:layout_alignParentRight="true"
        android:layout_below="@id/top_margin_header" />

    <!--background-->


    <com.theostanton.InstagramClient.views.ButtonHeaderBackground
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/footer_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/main_colour"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/footer_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/footer_one"
            android:background="@color/main_colour"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/footer_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/footer_two"
            android:background="@color/main_colour"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/footer_four"
            android:layout_width="0dp"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/footer_three"
            android:background="@color/main_colour"
            android:elevation="@dimen/footer_elevation" />

        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentTop="true"
            android:background="@color/main_colour"
            android:elevation="@dimen/footer_elevation" />


    </com.theostanton.InstagramClient.views.ButtonHeaderBackground>



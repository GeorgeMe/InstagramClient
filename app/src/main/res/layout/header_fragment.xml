    <!--footer pointer-->

    <com.theostanton.InstagramClient.views.FooterPointer
        android:id="@+id/footer_pointer"
        android:layout_width="0dp"
        android:layout_height="@dimen/footer_height"
        android:layout_above="@id/bottom_margin_header"
        android:layout_alignParentLeft="true"
        android:alpha="0" />

    <!--number footers-->

    <LinearLayout
        android:id="@+id/number_footers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_footers"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/header_posts_number"
            style="@style/HeaderFooterNumberViews" />

        <TextView
            android:id="@+id/header_likes_number"
            style="@style/HeaderFooterNumberViews" />

        <TextView
            android:id="@+id/header_follows_number"
            style="@style/HeaderFooterNumberViews" />

        <TextView
            android:id="@+id/header_followedby_number"
            style="@style/HeaderFooterNumberViews" />

    </LinearLayout>

    <!--text footers -->

    <LinearLayout
        android:id="@+id/text_footers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_margin_header"
        android:orientation="horizontal"
        android:translationZ="0dp">

        <TextView
            android:id="@+id/header_posts_text"
            style="@style/HeaderFooterTextViews"
            android:text="Posts" />

        <TextView
            android:id="@+id/header_likes_text"
            style="@style/HeaderFooterTextViews"
            android:text="Likes" />

        <TextView
            android:id="@+id/header_follows_text"
            style="@style/HeaderFooterTextViews"
            android:text="Follows" />

        <TextView
            android:id="@+id/header_followedby_text"
            style="@style/HeaderFooterTextViews"
            android:text="Followers" />
    </LinearLayout>


    <view
        android:id="@+id/user_image_header"
        class="com.theostanton.InstagramClient.views.UserImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/top_margin_header"

        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/back_button"
        android:elevation="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/user_place_holder"
        android:translationZ="@dimen/user_image_elevation" />

    <TextView
        android:id="@+id/single_text_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_contracted"
        android:layout_below="@+id/top_margin_header"
        android:layout_toLeftOf="@+id/right_margin_header"

        android:layout_toRightOf="@+id/vertical_mid_margin_header"
        android:gravity="center_vertical"
        android:text="Single Title Text"
        android:textAppearance="?android:attr/textAppearanceLargeInverse" />

    <TextView
        android:id="@+id/title_text_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/half_header_contracted"
        android:layout_below="@+id/top_margin_header"
        android:layout_toLeftOf="@+id/right_margin_header"
        android:layout_toRightOf="@+id/vertical_mid_margin_header"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="Main Text"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceLargeInverse" />

    <TextView
        android:id="@+id/sub_text_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/half_header_contracted"
        android:layout_below="@+id/title_text_header"
        android:layout_toLeftOf="@+id/right_margin_header"
        android:layout_toRightOf="@+id/vertical_mid_margin_header"
        android:gravity="top"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/detail_text_header"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/header_contracted"
        android:layout_below="@+id/top_margin_header"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/right_margin_header"
        android:gravity="center_vertical|right"
        android:text="Detail Text"
        android:textAppearance="?android:attr/textAppearanceSmallInverse" />


    <!--bio + website -->

    <TextView
        android:id="@+id/bio_text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sub_text_header"
        android:layout_below="@+id/sub_text_header"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/vertical_mid_margin_header"
        android:alpha="0"
        android:singleLine="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmallInverse" />

    <TextView
        android:id="@+id/website_text_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sub_text_header"
        android:layout_below="@+id/bio_text_header"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/vertical_mid_margin_header"
        android:alpha="0"
        android:singleLine="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmallInverse" />


    <!--back button-->


    <ImageView
        android:id="@+id/back_button"
        android:layout_width="35dp"
        android:layout_height="@dimen/header_contracted"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="center"
        android:src="@drawable/ic_action_back"
        android:visibility="visible" />


</RelativeLayout>